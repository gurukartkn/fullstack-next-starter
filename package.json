{
  "name": "fullstack-next-starter",
  "author": "gurukartkn",
  "description": "A fullstack next.js starter project with authentication and authorization, and a GraphQL API configured with Prisma",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/gurukartkn/fullstack-next-starter",
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "scripts": {
    "build:nexus-typegen": "ts-node --transpile-only modules/graphql/schema.ts",
    "predev": "yarn run build:nexus-typegen && yarn run generate",
    "dev": "cross-env NODE_OPTIONS='--inspect' next dev",
    "prebuild": "yarn run build:nexus-typegen && yarn run generate",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prettier": "prettier --write .",
    "prepare": "husky install",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "@prisma/client": "3.15.2",
    "@types/cors": "^2.8.12",
    "apollo-server-micro": "^3.9.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "deepmerge": "^4.2.2",
    "formik": "^2.2.9",
    "graphql": "^16.5.0",
    "graphql-tag": "^2.12.6",
    "ioredis": "^5.1.0",
    "lodash": "^4.17.21",
    "micro": "^9.3.4",
    "next": "12.1.6",
    "nexus": "^1.3.0",
    "react": "17.0.0",
    "react-dom": "17.0.0",
    "react-icons": "^4.4.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.5.1",
    "@graphql-codegen/typescript-operations": "2.4.2",
    "@graphql-codegen/typescript-react-apollo": "3.2.16",
    "@types/bcrypt": "^5.0.0",
    "@types/lodash": "^4.14.182",
    "@types/node": "18.0.0",
    "@types/react": "18.0.14",
    "@types/react-dom": "18.0.5",
    "autoprefixer": "^10.4.7",
    "cross-env": "^7.0.3",
    "eslint": "8.18.0",
    "eslint-config-next": "12.1.6",
    "husky": "^8.0.1",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prisma": "^3.15.2",
    "tailwindcss": "^3.1.4",
    "ts-node": "^10.8.1",
    "typescript": "4.7.4"
  },
  "prisma": {
    "schema": "modules/prisma/schema.prisma",
    "seed": "ts-node modules/prisma/seed.ts"
  }
}
